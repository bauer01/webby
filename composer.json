{
	"name": "webby/webby",
	"type": "project",
	"description": "A lightweight flat-file CMS written based on Nette framework",
	"keywords": ["cms","flat-file","flat","flatfile","php","nette"],
	"license": "proprietary",
	"authors": [
		{
			"name": "Bronislav Sedl√°k",
			"homepage": "https://bronislavsedlak.com"
		}
	],
	"require": {
		"php": "^7.1",
		"chrisjean/php-ico": "^1.0.4",
		"samdark/sitemap": "^2.0.7",
		"nette/application": "^2.4",
		"nette/bootstrap": "^2.4",
		"latte/latte": "^2.4",
		"tracy/tracy": "^2.4",
		"kriswallsmith/assetic": "^1.4",
		"leafo/scssphp": "^0.6.6",
		"ptachoire/cssembed": "^1.0",
		"symfony/console": "^3.2",
		"composer/composer": "^1.4",
		"wikimedia/composer-merge-plugin": "^1.3",
		"oomphinc/composer-installers-extender": "^1.1.1"
	},
	"require-dev": {
		"codeception/codeception": "^2.2.10",
		"nette/tester": "^1.7.1"
	},
	"autoload": {
		"psr-4": {"Webby\\": "app/Webby"}
	},
	"scripts": {
		"post-create-project-cmd": "bin/system install"
	},
	"minimum-stability": "dev",
	"extra": {
		"merge-plugin": {
			"include": [
				"content/extensions.json",
				"content/themes.json"
			]
		},
		"installer-types": ["webby-theme"],
		"installer-paths": {
			"content/themes/{$name}": ["type:webby-theme"]
		}
	},
	"config": {
		"secure-http": false,
		"preferred-install": "dist"
	}
}
